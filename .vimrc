set ignorecase
set number
set wrap
set encoding=utf-8
set mouse=a
set wildmenu
set lazyredraw
set showmatch
set laststatus=2
nmap j gj
nmap k gk
colorscheme onedark

syntax enable
filetype plugin indent on

set tabstop =4
set expandtab
set shiftwidth=4
set softtabstop=4
set autoindent
set smartindent

set incsearch
set hlsearch
nnoremap <CR> : nohlsearch<CR><CR>
